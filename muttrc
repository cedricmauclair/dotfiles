set realname  = 'Cedric Mauclair'
set signature = ~/.signature

# Gmail account
# ================================================

# Hostname
set hostname = gmail.com

# Headers
set index_format = "%4C %Z %{%d/%m %H:%M} %-15.15L (%?l?%4l&%4c?) %s"
hdr_order Date From To Cc
my_hdr From: Cedric Mauclair <Cedric.Mauclair@gmail.com>

ignore 'Authentication-Results:'
ignore 'DomainKey-Signature:'
ignore 'DKIM-Signature:'
unignore Date Message-ID In-Reply-To

# Keep mails on server
set move = no

# IMAP over SSL
set imap_authenticators   = login
set imap_passive          = no
set imap_check_subscribed = yes
set imap_list_subscribed  = yes
set imap_keepalive        = 900

# Folders
set folder    = imaps://imap.gmail.com:993
set spoolfile = +INBOX
set record    = +[Gmail]/Sent
set postponed = +[Gmail]/Drafts
set trash     = +[Gmail]/Trash
set to_chars  = ">Â»CFL"

# SMTP
set smtp_url  = smtps://smtp.gmail.com:465
set ssl_starttls = yes

# Cache datas
set header_cache     = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

# Miscellaneous
set mail_check        = 5
set timeout           = 10
set sort              = 'threads'
set sort_aux          = 'last-date-received'
set editor            = 'vim'
set pager_index_lines = 10
set wrap              = 78

# Colors
source ~/.mutt/colors.muttrc

# Macros
bind editor <space> noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to sent mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"

